<% if @post.errors.any? %>
  <%= turbo_stream.replace "post_form", partial: "form", locals: { post: @post } %>
  <%= turbo_stream.append "field_with_errors" do %>
    <% @post.errors.full_messages.each do |message| %>
      <div class="error"><%= message %></div>
    <% end %>
  <% end %>
<% else %>
  <%= turbo_stream.prepend "posts", partial: "post", locals: { post: @post } %>
<% end %>
